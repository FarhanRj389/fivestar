rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties collection - only authenticated users can read/write
    match /properties/{propertyId} {
      allow read: if true; // Anyone can read properties (public listing)
      allow write: if request.auth != null; // Only authenticated users can create/edit/delete
    }
    
    // Button configurations - only authenticated users can read/write
    match /buttonConfigs/{buttonId} {
      allow read: if true; // Anyone can read button configs (public use)
      allow write: if request.auth != null; // Only authenticated users can create/edit/delete
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin settings - only authenticated users
    match /adminSettings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
